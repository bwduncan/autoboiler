<!DOCTYPE html>
<html lang="${request.locale_name}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="pyramid web application">
    <meta name="author" content="Pylons Project">
    <link rel="shortcut icon" href="${request.static_url('boilerweb:static/pyramid-16x16.png')}">

    <title>Autoboiler control</title>

    <!-- Bootstrap core CSS -->
    <link href="https://oss.maxcdn.com/libs/twitter-bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this scaffold -->
    <link href="${request.static_url('boilerweb:static/theme.css')}" rel="stylesheet">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="//oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>

    <div class="starter-template">
      <div class="container">
        <div class="row">
          <div class="col-md-10">
            <div class="content">
              <h1><span class="font-semi-bold">Autoboiler control</span></h1>
              <p class="lead"><a class="glyphicon glyphicon-home" href="${request.route_url('home')}">Back to monitoring</a></p>
              <div class="lead" tal:condition="request.session.peek_flash()">
                <span tal:omit-tag=""
                        tal:repeat="message request.session.pop_flash()">
                        ${message}<br />
                </span>
              </div>
              <div class="row">
                <form method="POST" onsubmit="$('#value')[0].value = $('#value_visible')[0].value; if ($('#metric')[0].value == 'time') { $('#value')[0].value *= 60;  }; return true;">
                  <input type="hidden" name="channel" value="0" />
                  <button class="btnGreen" name="state" value="boost">Boost</button>
                  <span id="connective">to</span>
                  <input type="text" value="19" id="value_visible" size="2" />
                  <select name="metric" id="metric" onchange="$('#connective')[0].innerHTML = $('#metric')[0].selectedIndex ? 'for' : 'to';">
                    <option value="temp" selected="selected">Â°C</option>
                    <option value="time">min</option>
                  </select>
                  <input type="hidden" name="value" id="value" />
                </form><br />
                <form method="POST">
                  <input type="hidden" name="channel" value="0" />
                  <button class="btnGreen" name="state" value="on">Boiler on</button>
                  <button class="btnRed" name="state" value="off">Boiler off</button>
                </form><br/>
                <form method="POST">
                  <input type="hidden" name="channel" value="-1" />
                  <button class="btnGreen" name="state" value="on">Drive on</button>
                  <button class="btnRed" name="state" value="off">Drive off</button>
                </form><br/>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="links">
            <ul>
              <li class="current-version">Generated by v1.5.2</li>
              <li><i class="glyphicon glyphicon-bookmark icon-muted"></i><a href="http://docs.pylonsproject.org/projects/pyramid/en/1.5-branch/">Docs</a></li>
              <li><i class="glyphicon glyphicon-cog icon-muted"></i><a href="https://github.com/Pylons/pyramid">Github Project</a></li>
              <li><i class="glyphicon glyphicon-globe icon-muted"></i><a href="irc://irc.freenode.net#pyramid">IRC Channel</a></li>
              <li><i class="glyphicon glyphicon-home icon-muted"></i><a href="http://pylonsproject.org">Pylons Project</a></li>
            </ul>
          </div>
        </div>
        <div class="row">
          <div class="copyright">
            Copyright &copy; Pylons Project
          </div>
        </div>
      </div>
    </div>


    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://oss.maxcdn.com/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="https://oss.maxcdn.com/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js"></script>
  </body>
</html>
